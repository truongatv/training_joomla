<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/plugin-install.dtd">
<install type="plugin" method="upgrade" group="content" version="1.5.0">
	<name>Phoca Gallery Slideshow Plugin</name>
	<creationDate>18/05/2010</creationDate>
	<author>Jan Pavelka (www.phoca.cz)</author>
	<authorEmail></authorEmail>
	<authorUrl>www.phoca.cz</authorUrl>
	<copyright>Jan Pavelka</copyright>
	<license>GNU/GPL</license>
	<version>2.7.1</version>
	<!-- The description is optional and defaults to the name -->
	
	<description><![CDATA[ 
       Phoca Gallery Slideshow Plugin - displays slideshow of images from selected Phoca Gallery category<br />
	   {pgslideshow id=...|width=...|height=...|delay=...|image=...|pgslink=...}<br />
	   Image: O - original, L - large, M - medium, S - small<br />
	   Example:<br />
	   {pgslideshow id=1|width=100|height=100|delay=3000|image=M}<br />
       More information on <a href="http://www.phoca.cz" target="_blank" >www.phoca.cz</a>  
      ]]></description>

	<!-- Main File Copy Section -->
	<files>
		<filename plugin="phocagalleryslideshow">phocagalleryslideshow.js</filename>
		<filename plugin="phocagalleryslideshow">phocagalleryslideshow.php</filename>
		<filename plugin="phocagalleryslideshow">phocagalleryslideshow.xml</filename>
	</files>

	<!-- Language -->
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_content_phocagalleryslideshow.ini</language>
	</languages>

</install>
